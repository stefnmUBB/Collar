<UserControl x:Name="Control" x:Class="Collar.WPFControls.HueColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:local="clr-namespace:Collar.WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Border x:Name="Border" ClipToBounds="True" BorderThickness="0" Width="{Binding ActualWidth, ElementName=Control}" Height="{Binding ActualHeight, ElementName=Control}" SizeChanged="Border_SizeChanged" PreviewMouseDown="Border_PreviewMouseDown" PreviewMouseUp="Border_PreviewMouseUp" PreviewMouseMove="Border_PreviewMouseMove" MouseLeave="Border_MouseLeave" Loaded="Border_Loaded">
        </Border>

    </Grid>
</UserControl>
